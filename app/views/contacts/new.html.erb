<div class="flex space-x-2">
  <%= link_to contacts_path do %>
    <h2 class="font-semibold text-xl lg:text-3xl"><%= t('contacts.index.title') %></h2>
  <% end %>
  <span class="font-semibold text-xl lg:text-3xl">&gt;</span>
  <h2 class="font-semibold text-xl lg:text-3xl"><%= t('.title') %></h2>
</div>

<%= render 'shared/errors', object: @contact if @contact.errors.any? %>

<%= form_with model: @contact, url: contacts_path, class: 'mt-8 space-y-4' do |form| %>
  <div class="space-y-1">
    <%= form.label :first_name, class: 'font-bold' %>
    <%= form.text_field :first_name, class: 'input-field w-full lg:w-auto' %>
  </div>

  <div class="space-y-1">
    <%= form.label :last_name, class: 'font-bold' %>
    <%= form.text_field :last_name, required: true, class: 'input-field w-full lg:w-auto' %>
  </div>

  <div class="space-y-1">
    <%= form.label :phone_number, class: 'font-bold' %>
    <%= form.phone_field :phone_number, required: true, class: 'input-field w-full lg:w-auto' %>
  </div>

  <div class="pt-6">
    <%= form.submit t('.submit'), class: 'btn btn-primary w-full lg:w-auto' %>
  </div>
<% end %>
